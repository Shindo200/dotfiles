[user]
  name  = Suguru Odai
  email = ourqwers@gmail.com

[alias]
  adp = add -p
  co  = checkout
  cm  = commit
  df  = diff
  dfh = diff HEAD
  lg  = log --graph --abbrev-commit --pretty='%C(bold magenta)%h %C(reset)%C(green)[%cr] %C(reset)%s %C(bold green)%an%C(reset)%C(yellow)%d'
  lga = log --graph --all --pretty='%C(bold magenta)%h %C(reset)%C(green)[%cr] %C(reset)%s %C(bold green)%an%C(reset)%C(yellow)%d'
  mm  = merge --no-ff
  rb  = rebase
  ru  = remote update --prune
  st  = status
  undo = reset --soft HEAD@{1}

[color]
  ui = true

[push]
  default = matching

[pager]
  log  = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
